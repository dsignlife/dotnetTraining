<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>COIN STATS @ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    @*<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>*@
</head>

<body>

<div id="sidebar">
    <img src="~/img/tomz.jpg" alt="head" class="face"/>
    <span id="username">Tomz P</span>
    <ul class="menu">
        <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
        <li><a asp-controller="App" asp-action="About">About</a></li>
        <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
    </ul>
</div>


<div id="wrapper">
    <div id="main">
        <div>
            <button id="sToggle">Toggle Menu</button>
        </div>
        @RenderBody()
    </div>
    
   
    <div id="footer">
        &copy; 2017 Tomz's BitStats
    </div>
</div>

<script src="lib/jquery/dist/jquery.min.js"></script>
@RenderSection("scripts", false)
<script src="js/site.js"></script>

</body>
</html>


